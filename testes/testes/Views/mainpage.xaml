    <StackLayout>

        <Button x:Name="status" Text="status"
                Clicked="status_Clicked"
                />
        <Label Text="uwu" FontSize ="30" 
               x:Name="face"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        <Button x:Name="button1" Text="lightswitch"
            Clicked="button1_Clicked"
            />
        <Button x:Name="button2" Text="feed"
                 Clicked="button2_Clicked"
                />
